@model IEnumerable<IzdavanjeFaktura.ViewModels.ItemViewModel>

@{
    ViewBag.Title = "Proizvodi";
}

<h2>Proizvodi</h2>

<p>
    @Html.ActionLink("Unesi novi proizvod", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Item_Description)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Price_Item)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Item_Description)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Price_Item)
            </td>
            <td>
                @Html.ActionLink("Promijeni", "Edit", new { id = item.ItemID }) |
                @Html.ActionLink("Detalji", "Details", new { id = item.ItemID }) |
                @Html.ActionLink("Obriši", "Delete", new { id = item.ItemID })
            </td>
        </tr>
    }

        <p>
            @Html.ActionLink("Moja košarica", "Index", "Bills")
        </p>

</table>
